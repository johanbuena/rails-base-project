<section class="p-5">
  <div  class="container" id="signUp">
    <div class="d-sm-flex">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "mx-auto p-5"}) do |f| %>
        <span class="h2 fw-bold">
          Sign Up
        </span>
        <%= render "devise/shared/error_messages", resource: resource %>
        <div class = "row">
          <div class="col-md-6">
            <%= f.label :first_name, class:"col-form-label" %>
            <%= f.text_field :first_name, autofocus: true, autocomplete: "off", class: "form-control" %>
          </div>
          <div class="col-md-6">
            <%= f.label :last_name, class:"col-form-label" %>
            <%= f.text_field :last_name, autofocus: true, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="col-md-12">
            <%= f.label :email, class:"col-form-label" %>
            <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
        <%= f.text_field :account_status, value: 'false', id: :user_account_status, type: :hidden %>
        <%= f.text_field :wallet, value: 0, id: :user_wallet, type: :hidden %>
        <div class="row">
          <div class="col-md-6">
            <%= f.label :password, class:"col-form-label" %>
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
          <div class="col-md-6">
            <%= f.label :confirm_password , class:"col-form-label"%>
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
          </div>
        </div>
        <div class="row">
          <div class="border-top mt-2 col-md-12  d-grid">
            <%= f.submit "Sign up", class: "btn btn-primary mt-2" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
