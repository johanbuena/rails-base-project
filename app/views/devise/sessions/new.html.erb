<section class="p-5">
  <div  class="container" id="signIn">
    <div class="d-sm-flex">
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "mx-auto p-5"}) do |f| %>
        <div class="row justify-content-center">
          <span class="h2 fw-bold col-md-7">
            Sign In
          </span>
          <div class="col-md-7">
            <%= f.label :email, class:"col-form-label" %><br />
            <%= f.email_field :email, autofocus: true, autocomplete: "off", class: "form-control" %>
          </div>
          <div class="col-md-7">
            <%= f.label :password, class:"col-form-label" %><br />
            <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
          </div>
          <div class="border-top mt-2 col-md-7 d-grid">
            <%= f.submit "Sign in", class: "btn btn-primary mt-2" %>
            <%= link_to "Resend Email Confirmation", new_confirmation_path(resource_name), class: "mx-auto m-2  " %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>
