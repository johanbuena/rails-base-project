<%= form_with model: @portfolio do |form| %>
    <div class="row mb-3">
        <%= form.label :symbol, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.text_field :symbol, readonly: true %>
        </div>
    </div>
    <div class="row mb-3">
        <%= form.label :stock_name, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.text_field :stock_name, readonly: true %>
        </div>
    </div>
    <div class="row mb-3">
        <%= form.label :shares, 'Owned', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.text_field :shares, readonly: true %>
        </div>
    </div>
    <div class="row mb-3">
        <%= form.label :price, class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.text_field :price, readonly: true %>
        </div>
    </div>
    <div class="row mb-3">
        <%= form.label :qty_sell, 'Enter # of Shares to sell', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-10">
            <%= form.text_field :qty_sell %>
        </div>
    </div>
    <div>
        <%= form.submit 'Sell', data: { confirm: "Are you sure you want to sell this?" } %>
    </div>
<% end %>

