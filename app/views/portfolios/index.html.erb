<p><h1>This is the Portfolio Page</h1></p>

<% if @portfolio.empty? %>
    <p>portfolio is empty</p>
<% else %>
    <table class = "home_table table m-auto text-center">
        <thead>
            <tr>
            <th>SYMBOL</th>
            <th>NAME</th>
            <th>VOLUME</th>
            <th>BUY PRICE</th>
            <th>ACTION</th>
            </tr>
        </thead>
        <tbody>
            <% @portfolio.each do |e| %>
                <tr>
                    <td>
                        <%= e.symbol %>
                    </td>
                    <td>
                        <%= e.stock_name %>
                    </td>
                    <td>
                        <%= number_with_delimiter(e.shares, :delimiter => ',') %>
                    </td>
                    <td>
                        <%= number_to_currency(e.price, :unit => "$", :delimiter => ',') %>
                    </td>
                    <td>
                        <a href="/portfolios/<%= e.id %>/edit" class="btn btn-primary m-1">Sell</a>
                    </td>
                </tr>
            <% end %>
        </tbody>
    </table>
<% end %>
